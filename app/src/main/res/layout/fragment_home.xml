<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/galaxy"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/show_activity_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/show_activity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/singleFragmentButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Single fragment"
            />

        <Button
            android:id="@+id/MultiFragmentButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Multi fragment"
            />

        <Button
            android:id="@+id/PagerFragmentButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Pager fragment"
             />

    </LinearLayout>


</RelativeLayout>